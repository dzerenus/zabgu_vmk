<Window x:Class="TCPLab.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCPLab.Client"
        mc:Ignorable="d"
        Title="TCP/UDP Клиент" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Background="Wheat"></Grid>
        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBlock VerticalAlignment="Center">IP-Адрес сервера:</TextBlock>
            <TextBox Width="200" Margin="5 0" VerticalContentAlignment="Center"></TextBox>
            <TextBlock VerticalAlignment="Center">Порт:</TextBlock>
            <TextBox Width="80" Margin="5 0" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <ComboBox Margin="5 0" Width="50" SelectedIndex="0">
                <ComboBoxItem>TCP</ComboBoxItem>
                <ComboBoxItem>UDP</ComboBoxItem>
            </ComboBox>
            <Button Width="130" VerticalContentAlignment="Center">Подключиться</Button>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Bottom" CanHorizontallyScroll="True" Margin="5">
                <Border CornerRadius="0" Background="LightGoldenrodYellow" BorderBrush="Gray" BorderThickness="0 0 0 1" Margin="0 2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Пользователь №32:" FontWeight="Bold" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                        <TextBlock Grid.Column="1" Margin="5" TextWrapping="Wrap" Text="Сообщение" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Margin="5" Text="21:30:15" VerticalAlignment="Bottom" FontSize="8" Opacity="0.7" HorizontalAlignment="Right"/>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="2" Background="Wheat">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="Пользователь №23"></TextBlock>
            <TextBox Grid.Column="1" Margin="5" VerticalContentAlignment="Center"></TextBox>
            <Button Grid.Column="2" Margin="5" VerticalContentAlignment="Center">Отправить</Button>
        </Grid>
    </Grid>
</Window>
